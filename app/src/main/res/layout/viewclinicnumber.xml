<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF0F5"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="#33CCFF"
        android:orientation="horizontal">
        <Button
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher_list"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginHorizontal="100dp"
            android:text="查看診間號碼"
            android:textStyle="bold"/>
        <Button
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_launcher_home"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="40dp"
        android:padding="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查詢方式:"
                android:textSize="25dp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/searchoption"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dname"
                    android:layout_width="143dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="科別"
                    android:textSize="25dp"/>

                <RadioButton
                    android:id="@+id/pname"
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="病人姓名"
                    android:textSize="25dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SearchView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></SearchView>

            <EditText
                android:id="@+id/searchbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="以科別或病人姓名查詢" />

            <Button
                android:id="@+id/searchbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:text="查詢" />
        </LinearLayout>
    </LinearLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:id="@+id/llview"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_marginHorizontal="25dp"
                   android:background="@drawable/rectangle_blue">
                   <TextView
                       android:id="@+id/titleview"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="22dp"
                       android:textColor="#FFFFFF"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="25dp"
                   android:gravity="center"
                   android:background="@drawable/rectangle"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:padding="6dp"
                       android:orientation="horizontal">
                       <TextView
                           android:textSize="23dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:text="看診時段: "/>

                       <TextView
                           android:id="@+id/timeview"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="40dp"
                           android:textColor="#008844"
                           android:textSize="23dp" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:padding="6dp"
                       android:orientation="horizontal">
                       <TextView
                           android:textSize="23dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:text="看診病人: "/>

                       <TextView
                           android:id="@+id/patientview"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="40dp"
                           android:textColor="#008844"
                           android:textSize="23dp" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:padding="6dp"
                       android:orientation="horizontal">
                       <TextView
                           android:textSize="23dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:text="掛號號碼:"/>
                       <TextView
                           android:id="@+id/numview"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="23dp"
                           android:layout_marginLeft="42dp"
                           android:textColor="#008844" />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:padding="6dp"
                       android:orientation="horizontal">
                       <TextView
                           android:textSize="23dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="20dp"
                           android:gravity="center_horizontal"
                           android:textColor="#000000"
                           android:text="看診醫師: "/>
                       <TextView
                           android:id="@+id/docview"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="23dp"
                           android:textColor="#008844"
                           android:layout_marginLeft="40dp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:padding="6dp"
                       android:orientation="horizontal">
                       <TextView
                           android:textSize="23dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:text="門診位置:"/>
                       <TextView
                           android:id="@+id/locview"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="23dp"
                           android:layout_marginLeft="40dp"
                           android:textColor="#008844"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:padding="6dp"
                       android:orientation="horizontal">
                       <TextView
                           android:textSize="23dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:layout_marginLeft="20dp"
                           android:textColor="#000000"
                           android:text="目前門診號碼:"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="23dp"
                           android:textColor="#FF3333"
                           android:layout_marginLeft="40dp"
                           android:text="24"/>
                   </LinearLayout>

               </LinearLayout>

           </LinearLayout>
       </LinearLayout>


   </ScrollView>

</LinearLayout>


