<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF0F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#33CCFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher_lastpage"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="115dp"
            android:text="預約掛號"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_launcher_home"
            android:layout_marginRight="15dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FFF0F5"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/week"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="當週(4/22~4/27)"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/rectangle_blue"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="185dp">

        <TextView
            android:id="@+id/selectnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/testll"
        android:layout_width="382dp"
        android:layout_height="512dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="230dp" >
        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="請選擇醫生:"
                android:textSize="28dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"/>
            <Spinner
                android:id="@+id/select_doc"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"> </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/timetext"
                android:layout_width="382dp"
                android:layout_height="60dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="請選擇時間:"
                    android:textSize="28dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="382dp"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/timelist"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    >
                </ListView>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>