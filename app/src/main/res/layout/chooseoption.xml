<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF0F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#33CCFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher_lastpage"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="115dp"
            android:text="預約掛號"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_launcher_home"
            android:layout_marginRight="15dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFF0F5"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

            <SearchView
                android:layout_width="26dp"
                android:layout_height="46dp"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="50dp" />
        <EditText
            android:id="@+id/editText5"
            android:layout_width="182dp"
            android:layout_height="45dp"
            android:ems="10"
            android:gravity="start"
            android:hint="醫師查詢"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            tools:ignore="MissingConstraints"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:text="查詢" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/week"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="當週(4/22~4/27)"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/rectangle_blue"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="185dp">

        <TextView
            android:id="@+id/selectnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/testll"
        android:layout_width="382dp"
        android:layout_height="450dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="85dp"
                android:layout_height="105dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/doctor0"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/docname"
                    android:layout_width="187dp"
                    android:layout_height="29dp"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                     />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        tools:ignore="MissingConstraints"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"/>

                    <Spinner
                        android:id="@+id/spinner6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="71dp"
                    android:layout_height="38dp"
                    android:background="@color/colorPrimary"
                    android:text="預約"
                    android:textColor="#FFFFFF"
                    tools:ignore="MissingConstraints"
                    android:layout_marginLeft="70dp" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
 </LinearLayout>