<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btUpPage"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="上一頁"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btUpPage"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btUpPage"
            android:text="查詢科別 : "
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_toEndOf="@+id/btUpPage"
            android:layout_toRightOf="@+id/btUpPage" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="上午診"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="下午診" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="夜間診" />
        </RadioGroup>

         <ListView
                android:layout_width="390dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
             android:layout_marginBottom="10dp"
                android:id="@+id/listview" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/listview"
            android:layout_alignBottom="@+id/listview"
            android:text="是否於前幾號時提醒我"
            android:textSize="20dp"/>

    </RelativeLayout>


</LinearLayout>
