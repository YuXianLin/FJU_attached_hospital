<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF0F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:background="#33CCFF"
        android:orientation="horizontal">
        <Button
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_launcher_list"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginHorizontal="110dp"
            android:text="衛教資訊"
            android:textStyle="bold"/>
        <Button
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_launcher_home"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="衛教專欄"
            android:background="@drawable/button_round"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="衛教報導"
            android:background="@drawable/button_round"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="政令宣導"
            android:background="@drawable/button_round"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#FFC8B4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="心導管手術免除開心之苦"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#FFC8B4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="愛維養護中心天使創作展"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#FFC8B4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="鼻竇內的藏鏡人:黴菌性鼻竇炎"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#FFC8B4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="三高知識知多少?"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:background="#FFC8B4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:background="@drawable/rectangle"
                android:text="聘僱外籍勞工擔任看護之正確管道"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#FFC8B4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="葉爵榮演講用藥宜忌大哉問"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#FFC8B4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangle"
                android:text="淺談音樂與身心健康"
                android:textSize="10pt"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>